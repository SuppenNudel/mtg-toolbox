<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.5" prefHeight="402.0" prefWidth="565.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="suppennudel.gui.SimulDecksView">
   <items>
      <VBox alignment="TOP_CENTER">
         <children>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
               <items>
                  <TableView fx:id="deckListTable" editable="true">
                    <columns>
                      <TableColumn fx:id="checkColumn" />
                      <TableColumn fx:id="deckNameColumn" text="Name" />
                        <TableColumn fx:id="tierColumn" text="Tier" />
                    </columns>
                  </TableView>
                  <TextArea fx:id="simulatePossessionTextArea" prefHeight="200.0" prefWidth="200.0" />
               </items>
            </SplitPane>
            <Button mnemonicParsing="false" onAction="#start" text="Analyze">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <HBox fx:id="columnHolder" spacing="10.0" />
   </items>
</SplitPane>
